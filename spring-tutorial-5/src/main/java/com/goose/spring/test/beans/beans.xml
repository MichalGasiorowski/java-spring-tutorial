<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="init" default-destroy-method="destroy"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="person" class="com.goose.spring.test.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance">
		<constructor-arg value="777" name="id" type="int"></constructor-arg>
		<constructor-arg value="Mary" name="name" type="String"></constructor-arg>
		<property name="taxId" value="321">
		</property>
		<property name="address" ref="address"></property>
	</bean>
	
	<bean id="person2" class="com.goose.spring.test.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="createPerson" factory-bean="personfactory">
		<constructor-arg value="777" name="id" type="int"></constructor-arg>
		<constructor-arg value="Mary" name="name" type="String"></constructor-arg>
		<property name="taxId" value="321">
		</property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.goose.spring.test.Address">
		<constructor-arg name="street" type="String" value="1 Church Lane">
		</constructor-arg>
		<constructor-arg name="postcode" type="String" value="9876"></constructor-arg>
	</bean>
	
	<bean id="address2" class="com.goose.spring.test.Address" p:street="23 Vinyard street" p:postcode="1233">
		
	</bean>
	
	<bean id="personfactory"
		class="com.goose.spring.test.PersonFactory">
	</bean>
</beans>
